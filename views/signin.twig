<!DOCTYPE html>
<html lang="{{ get_bloginfo('language')|default('en') }}" dir="{{ is_rtl() ? 'rtl' : 'ltr' }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{{ page_title }}
			-
			{{ site_name }}</title>
	</head>
	<body>
		<h1>{{ page_title }}</h1>
		<form method="post" action="{{ form_action|default('') }}">
			<div>
				<label for="mobile">{{ __('Mobile Number:', 'db-conn') }}</label>
				<input type="tel" id="mobile" name="mobile" required>
			</div>
			<div>
				<label for="otp">{{ __('OTP:', 'db-conn') }}</label>
				<input type="text" id="otp" name="otp" required>
			</div>
			<button type="submit">{{ __('Sign In', 'db-conn') }}</button>
		</form>
	</body>
</html>
