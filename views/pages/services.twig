{% extends "layouts/layout.twig" %}

{% block content %}
	<div
		class="app-page" data-page="services">
		{# Services Grid #}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
			<div class="service-card">
				<div class="service-icon bg-blue-100">
					<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
					</svg>
				</div>
				<h3 class="service-title">Database Management</h3>
				<p class="service-description">Manage and monitor your database connections efficiently with real-time insights.</p>
				<div class="service-status status-active">
					<span class="status-dot"></span>
					<span>Active</span>
				</div>
			</div>

			<div class="service-card">
				<div class="service-icon bg-green-100">
					<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
					</svg>
				</div>
				<h3 class="service-title">Security & Backup</h3>
				<p class="service-description">Automated backups and enhanced security features to protect your data.</p>
				<div class="service-status status-active">
					<span class="status-dot"></span>
					<span>Active</span>
				</div>
			</div>

			<div class="service-card">
				<div class="service-icon bg-purple-100">
					<svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
					</svg>
				</div>
				<h3 class="service-title">Analytics & Reports</h3>
				<p class="service-description">Comprehensive analytics and detailed reports for data-driven decisions.</p>
				<div class="service-status status-active">
					<span class="status-dot"></span>
					<span>Active</span>
				</div>
			</div>

			<div class="service-card">
				<div class="service-icon bg-orange-100">
					<svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
					</svg>
				</div>
				<h3 class="service-title">API Integration</h3>
				<p class="service-description">Seamless API integration for connecting with third-party services.</p>
				<div class="service-status status-inactive">
					<span class="status-dot"></span>
					<span>Inactive</span>
				</div>
			</div>

			<div class="service-card">
				<div class="service-icon bg-red-100">
					<svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
					</svg>
				</div>
				<h3 class="service-title">Notifications</h3>
				<p class="service-description">Real-time notifications and alerts for important events and updates.</p>
				<div class="service-status status-active">
					<span class="status-dot"></span>
					<span>Active</span>
				</div>
			</div>

			<div class="service-card">
				<div class="service-icon bg-indigo-100">
					<svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
					</svg>
				</div>
				<h3 class="service-title">User Management</h3>
				<p class="service-description">Manage users, roles, and permissions with granular access control.</p>
				<div class="service-status status-active">
					<span class="status-dot"></span>
					<span>Active</span>
				</div>
			</div>
		</div>

		{# Service Plans #}
		<div class="card">
			<h2 class="text-xl font-bold text-gray-900 mb-6">Available Plans</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
				<div class="plan-card">
					<h4 class="plan-name">Basic</h4>
					<p class="plan-price">$9<span class="text-sm font-normal text-gray-500">/month</span>
					</p>
					<ul class="plan-features">
						<li>5 Database Connections</li>
						<li>Basic Analytics</li>
						<li>Email Support</li>
						<li>1 GB Storage</li>
					</ul>
					<button class="btn-outline w-full">Current Plan</button>
				</div>
				<div class="plan-card plan-featured">
					<div class="plan-badge">Popular</div>
					<h4 class="plan-name">Pro</h4>
					<p class="plan-price">$29<span class="text-sm font-normal text-gray-500">/month</span>
					</p>
					<ul class="plan-features">
						<li>Unlimited Connections</li>
						<li>Advanced Analytics</li>
						<li>Priority Support</li>
						<li>10 GB Storage</li>
						<li>API Access</li>
					</ul>
					<button class="btn-primary w-full">Upgrade</button>
				</div>
				<div class="plan-card">
					<h4 class="plan-name">Enterprise</h4>
					<p class="plan-price">$99<span class="text-sm font-normal text-gray-500">/month</span>
					</p>
					<ul class="plan-features">
						<li>Everything in Pro</li>
						<li>Custom Solutions</li>
						<li>24/7 Support</li>
						<li>Unlimited Storage</li>
						<li>White Label</li>
					</ul>
					<button class="btn-outline w-full">Contact Sales</button>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
