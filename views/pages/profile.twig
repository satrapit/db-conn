{% extends "layouts/layout.twig" %}

{% block content %}
	<div
		class="app-page" data-page="profile">

		{# Profile Information - Moved to Top #}
		<div class="card mb-4">
			<div class="flex items-center gap-4">
				<div class="w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0">
					<i class="fi fi-sr-circle-user text-5xl text-gray-400"></i>
				</div>
				<div class="flex-1">
					<h2 class="text-base font-bold text-gray-800 dark:text-gray-100" data-profile-name>...</h2>
					<p class="text-sm text-gray-500 dark:text-gray-400" data-profile-phone>...</p>
				</div>
				<a href="#" id="edit-profile-btn" class="flex items-center gap-2 text-primary">
					<span class="text-sm font-medium">{{ strings.profile.edit_profile }}</span>
					<i class="fi fi-rr-arrow-small-left text-lg"></i>
				</a>
			</div>
		</div>
		{# Navigation Links #}
		<div class="card mb-4">
			<h3 class="card-title">{{ strings.profile.navigation.title }}</h3>
			<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden">
				<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="menu-item">
					<span class="icon-wrapper">
						<i class="fi fi-rr-apps text-xl"></i>
						<span class="notification-dot"></span>
					</span>
					<span class="text-base font-medium">{{ strings.profile.navigation.services }}</span>
				</a>
				<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="menu-item">
					<i class="fi fi-rr-interrogation text-xl"></i>
					<span class="text-base font-medium">{{ strings.profile.navigation.help }}</span>
				</a>
				<a href="{{ home_url ~ page_slugs.about }}" data-nav="about" class="menu-item">
					<i class="fi fi-rr-info text-xl"></i>
					<span class="text-base font-medium">{{ strings.profile.navigation.about }}</span>
				</a>
			</div>
		</div>

		{# Profile Information Details #}
		<div class="card mb-4">
			<h3 class="card-title">{{ strings.profile.profile_info.title }}</h3>
			<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden">
				<div class="menu-item">
					<i class="fi fi-rr-user text-xl"></i>
					<span class="text-base font-medium" data-detail-name>...</span>
				</div>
				<div class="menu-item">
					<i class="fi fi-rr-envelope text-xl"></i>
					<span class="text-base font-medium" data-detail-email>...</span>
				</div>
				<div class="menu-item">
					<i class="fi fi-rr-phone-call text-xl"></i>
					<span class="text-base font-medium" data-detail-phone>...</span>
				</div>
				<div class="menu-item">
					<i class="fi fi-rr-cake-birthday text-xl"></i>
					<span class="text-base font-medium" data-detail-birth-date>...</span>
				</div>
			</div>
		</div>
		{# Account Settings #}
		<div class="card mb-4">
			<h3 class="card-title">{{ strings.profile.account_settings.title }}</h3>
			<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden">
				<div class="menu-item">
					<i class="fi fi-rr-bell text-xl"></i>
					<span class="text-base font-medium flex-1">{{ strings.profile.account_settings.email_notifications }}</span>
					<label class="toggle-switch">
						<input type="checkbox" checked>
						<span class="toggle-slider"></span>
					</label>
				</div>
				<div class="menu-item">
					<i class="fi fi-rr-moon-stars text-xl"></i>
					<span class="text-base font-medium flex-1">{{ strings.profile.account_settings.dark_mode }}</span>
					<label class="toggle-switch">
						<input type="checkbox" id="darkModeToggle">
						<span class="toggle-slider"></span>
					</label>
				</div>
			</div>
		</div>

		{# Danger Zone #}
		<div class="card mb-4">
			<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden">
				<a href="#" id="logoutBtn" class="menu-item hover:bg-red-50 dark:hover:bg-red-900/20 text-red-600 dark:text-red-400">
					<i class="fi fi-rr-user-logout text-xl"></i>
					<span class="text-base font-medium">{{ strings.profile.navigation.logout }}</span>
				</a>
			</div>
		</div>

		{# Plugin Information #}
		<div class="text-center mb-3">
			<span class="text-sm text-gray-500 dark:text-gray-400">{{ strings.profile.plugin_info.version }}
				{{ plugin_version }}</span>
		</div>
	</div>
{% endblock %}
