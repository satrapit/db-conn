{% extends "layouts/layout.twig" %}

{% block content %}
	<div
		class="app-page" data-page="profile">
		{# Profile Header #}
		<div class="card mb-6">
			<div class="flex flex-col items-center text-center">
				<div class="profile-avatar mb-4">
					<svg class="w-20 h-20 text-gray-400" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
					</svg>
				</div>
				<h2 class="text-2xl font-bold text-gray-900 mb-1">John Doe</h2>
				<p class="text-gray-500 mb-4">john.doe@example.com</p>
				<button class="btn-primary">Edit Profile</button>
			</div>
		</div>

		{# Profile Information #}
		<div class="card mb-6">
			<h3 class="text-lg font-bold text-gray-900 mb-4">Profile Information</h3>
			<div class="space-y-4">
				<div class="profile-field">
					<label class="profile-label">Full Name</label>
					<input type="text" class="profile-input" value="John Doe" readonly>
				</div>
				<div class="profile-field">
					<label class="profile-label">Email</label>
					<input type="email" class="profile-input" value="john.doe@example.com" readonly>
				</div>
				<div class="profile-field">
					<label class="profile-label">Phone</label>
					<input type="tel" class="profile-input" value="+1 234 567 8900" readonly>
				</div>
				<div class="profile-field">
					<label class="profile-label">Role</label>
					<input type="text" class="profile-input" value="Administrator" readonly>
				</div>
				<div class="profile-field">
					<label class="profile-label">Member Since</label>
					<input type="text" class="profile-input" value="January 2024" readonly>
				</div>
			</div>
		</div>

		{# Account Settings #}
		<div class="card mb-6">
			<h3 class="text-lg font-bold text-gray-900 mb-4">Account Settings</h3>
			<div class="space-y-3">
				<div class="setting-item">
					<div class="flex items-center justify-between">
						<div>
							<p class="font-medium text-gray-900">Email Notifications</p>
							<p class="text-sm text-gray-500">Receive email updates</p>
						</div>
						<label class="toggle-switch">
							<input type="checkbox" checked>
							<span class="toggle-slider"></span>
						</label>
					</div>
				</div>
				<div class="setting-item">
					<div class="flex items-center justify-between">
						<div>
							<p class="font-medium text-gray-900">Two-Factor Authentication</p>
							<p class="text-sm text-gray-500">Enhanced security</p>
						</div>
						<label class="toggle-switch">
							<input type="checkbox">
							<span class="toggle-slider"></span>
						</label>
					</div>
				</div>
				<div class="setting-item">
					<div class="flex items-center justify-between">
						<div>
							<p class="font-medium text-gray-900">Dark Mode</p>
							<p class="text-sm text-gray-500">Toggle dark theme</p>
						</div>
						<label class="toggle-switch">
							<input type="checkbox">
							<span class="toggle-slider"></span>
						</label>
					</div>
				</div>
			</div>
		</div>

		{# Danger Zone #}
		<div class="card border-red-200">
			<h3 class="text-lg font-bold text-red-600 mb-4">Danger Zone</h3>
			<div class="space-y-3">
				<button class="btn-danger w-full">Change Password</button>
				<button class="btn-danger w-full">Logout All Sessions</button>
				<button class="btn-danger w-full">Delete Account</button>
			</div>
		</div>
	</div>
{% endblock %}
