{% extends "layouts/login-layout.twig" %}

{% block content %}
	{# Fixed height notification area to prevent layout shift #}
	<div id="alert-container" class="mb-4 min-h-[60px] flex items-center">
		<div id="alert-message" class="w-full p-4 rounded-lg text-sm transition-all duration-300 opacity-0 invisible"></div>
	</div>

	{# Step 1: Phone Number Entry #}
	<div id="phone-step" class="space-y-4" style="display: none;">
		<div>
			<label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
				شماره موبایل
			</label>
			<input type="text" id="phone" name="phone" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors" placeholder="09xxxxxxxxx" maxlength="11" pattern="^09\d{9}$">
		</div>
		<div id="phone-countdown-container" class="text-center text-sm text-gray-600 bg-gray-50 border border-gray-200 rounded-lg p-3 hidden">
			<span>درخواست مجدد کد در
			</span>
			<span id="phone-countdown" class="font-bold text-primary-600"></span>
		</div>
		<button id="send-otp-btn" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200">
			ارسال کد تایید
		</button>
	</div>

	{# Step 2: OTP Verification #}
	<div
		id="otp-step" class="space-y-4 hidden">
		{# Display entered phone number with edit button #}
		<div class="bg-gray-50 border border-gray-200 rounded-lg p-4 flex items-center justify-between">
			<div class="flex items-center gap-2">
				<svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
				</svg>
				<span id="display-phone" class="text-gray-700 font-medium"></span>
			</div>
			<button id="edit-phone-btn" type="button" class="text-primary-600 hover:text-primary-700 text-sm font-medium flex items-center gap-1 transition-colors">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
				</svg>
				ویرایش
			</button>
		</div>

		<div>
			<label for="otp" class="block text-sm font-medium text-gray-700 mb-2">
				کد تایید
			</label>
			<input type="text" id="otp" name="otp" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors text-center text-2xl tracking-widest" placeholder="000000" maxlength="6" pattern="\d{6}">
		</div>
		<div id="countdown-container" class="text-center text-sm text-gray-600 hidden">
			<span>ارسال مجدد کد در
			</span>
			<span id="countdown" class="font-bold"></span>
			<span>
				ثانیه</span>
		</div>
		<button id="verify-otp-btn" class="w-full bg-primary-600 hover:bg-primary-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200">
			تایید کد
		</button>
		<button id="resend-otp-btn" class="w-full bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-4 rounded-lg transition-colors duration-200 hidden">
			ارسال مجدد کد
		</button>
	</div>
{% endblock %}
