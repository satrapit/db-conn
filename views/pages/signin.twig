{% extends "layouts/login-layout.twig" %}

{% block content %}
	{# Fixed height notification area to prevent layout shift #}
	<div id="alert-container" class="mb-4 min-h-[60px] flex items-center">
		<div id="alert-message" class="w-full p-4 rounded-lg text-sm transition-all duration-300 opacity-0 invisible"></div>
	</div>

	{# Step 1: Phone Number Entry #}
	<div id="phone-step" class="space-y-4" style="display: none;">
		<div>
			<label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
				{{ strings.auth.signin.phone_label }}
			</label>
			<input type="text" id="phone" name="phone" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 dark:placeholder:text-gray-500" placeholder="{{ strings.auth.signin.phone_placeholder }}" maxlength="11" pattern="^09\d{9}$">
		</div>
		<div id="phone-countdown-container" class="text-center text-sm text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-3 hidden">
			<span>{{ strings.auth.signin.request_again_in }}
			</span>
			<span id="phone-countdown" class="font-bold text-primary-600 dark:text-primary-400"></span>
		</div>
		<button id="send-otp-btn" class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 px-4 rounded-lg transition-colors duration-200">
			{{ strings.auth.signin.send_otp_btn }}
		</button>
	</div>

	{# Step 2: OTP Verification #}
	<div
		id="otp-step" class="space-y-4 hidden">
		{# Display entered phone number with edit button #}
		<div class="bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4 flex items-center justify-between">
			<div class="flex items-center gap-2">
				<i class="fi fi-rr-phone-call text-xl text-gray-500 dark:text-gray-400"></i>
				<span id="display-phone" class="text-gray-700 dark:text-gray-300 font-medium"></span>
			</div>
			<button id="edit-phone-btn" type="button" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm font-medium flex items-center gap-1 transition-colors">
				<i class="fi fi-rr-edit"></i>
				{{ strings.auth.signin.edit }}
			</button>
		</div>

		<div>
			<label for="otp" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
				{{ strings.auth.signin.otp_label }}
			</label>
			<input type="text" id="otp" name="otp" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-colors text-center text-2xl tracking-widest bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder:text-gray-400 dark:placeholder:text-gray-500" placeholder="{{ strings.auth.signin.otp_placeholder }}" maxlength="6" pattern="\d{6}">
		</div>
		<div id="countdown-container" class="text-center text-sm text-gray-600 dark:text-gray-400 hidden">
			<span>{{ strings.auth.signin.resend_in }}
			</span>
			<span id="countdown" class="font-bold"></span>
			<span>
				{{ strings.auth.signin.seconds }}</span>
		</div>
		<button id="verify-otp-btn" class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 px-4 rounded-lg transition-colors duration-200">
			{{ strings.auth.signin.verify_otp_btn }}
		</button>
		<button id="resend-otp-btn" class="w-full bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-300 font-semibold py-3 px-4 rounded-lg transition-colors duration-200 hidden">
			{{ strings.auth.signin.resend_otp_btn }}
		</button>
	</div>
{% endblock %}
