{% extends "layouts/layout.twig" %}

{% block content %}
	<div
		class="app-page" data-page="panel">
		{# Dashboard Stats #}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
			<div class="stat-card bg-gradient-to-br from-blue-500 to-blue-600 text-white">
				<div class="stat-icon">
					<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
					</svg>
				</div>
				<div class="stat-content">
					<p class="stat-label">کل کاربران</p>
					<p class="stat-value">1,234</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-green-500 to-green-600 text-white">
				<div class="stat-icon">
					<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
				</div>
				<div class="stat-content">
					<p class="stat-label">نشست‌های فعال</p>
					<p class="stat-value">89</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-purple-500 to-purple-600 text-white">
				<div class="stat-icon">
					<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
					</svg>
				</div>
				<div class="stat-content">
					<p class="stat-label">اتصالات</p>
					<p class="stat-value">456</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-orange-500 to-orange-600 text-white">
				<div class="stat-icon">
					<svg class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
				</div>
				<div class="stat-content">
					<p class="stat-label">زمان فعالیت</p>
					<p class="stat-value">99.9%</p>
				</div>
			</div>
		</div>

		{# Quick Actions #}
		<div class="card mb-6">
			<h2 class="text-xl font-bold text-gray-900 mb-4">اقدامات سریع</h2>
			<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
				<button class="action-btn">
					<svg class="w-6 h-6 mb-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
					</svg>
					<span>اتصال جدید</span>
				</button>
				<button class="action-btn">
					<svg class="w-6 h-6 mb-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
					</svg>
					<span>بروزرسانی</span>
				</button>
				<button class="action-btn">
					<svg class="w-6 h-6 mb-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
					</svg>
					<span>گزارش‌ها</span>
				</button>
				<button class="action-btn">
					<svg class="w-6 h-6 mb-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
					</svg>
					<span>تنظیمات</span>
				</button>
			</div>
		</div>

		{# Recent Activity #}
		<div class="card">
			<h2 class="text-xl font-bold text-gray-900 mb-4">فعالیت‌های اخیر</h2>
			<div class="space-y-3">
				<div class="activity-item">
					<div class="activity-icon bg-blue-100 text-blue-600">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
					</div>
					<div class="activity-content">
						<p class="activity-title">کاربر جدید ثبت نام کرد</p>
						<p class="activity-time">۲ دقیقه پیش</p>
					</div>
				</div>
				<div class="activity-item">
					<div class="activity-icon bg-green-100 text-green-600">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
						</svg>
					</div>
					<div class="activity-content">
						<p class="activity-title">اتصال پایگاه داده موفقیت‌آمیز بود</p>
						<p class="activity-time">۱۵ دقیقه پیش</p>
					</div>
				</div>
				<div class="activity-item">
					<div class="activity-icon bg-purple-100 text-purple-600">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
						</svg>
					</div>
					<div class="activity-content">
						<p class="activity-title">سیستم به نسخه ۲.۱.۰ بروزرسانی شد</p>
						<p class="activity-time">۱ ساعت پیش</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
