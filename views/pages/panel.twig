{% extends "layouts/layout.twig" %}

{% block content %}
	<div
		class="app-page" data-page="panel">
		{# Dashboard Stats #}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
			<div class="stat-card bg-gradient-to-br from-blue-500 to-blue-600 text-white">
				<div class="stat-icon">
					<i class="fi fi-rr-chart-line-up text-3xl"></i>
				</div>
				<div class="stat-content">
					<p class="stat-label">کل کاربران</p>
					<p class="stat-value">1,234</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-green-500 to-green-600 text-white">
				<div class="stat-icon">
					<i class="fi fi-rr-check-circle text-3xl"></i>
				</div>
				<div class="stat-content">
					<p class="stat-label">نشست‌های فعال</p>
					<p class="stat-value">89</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-purple-500 to-purple-600 text-white">
				<div class="stat-icon">
					<i class="fi fi-rr-database text-3xl"></i>
				</div>
				<div class="stat-content">
					<p class="stat-label">اتصالات</p>
					<p class="stat-value">456</p>
				</div>
			</div>

			<div class="stat-card bg-gradient-to-br from-orange-500 to-orange-600 text-white">
				<div class="stat-icon">
					<i class="fi fi-rr-clock text-3xl"></i>
				</div>
				<div class="stat-content">
					<p class="stat-label">زمان فعالیت</p>
					<p class="stat-value">99.9%</p>
				</div>
			</div>
		</div>

		{# Quick Actions #}
		<div class="card mb-6">
			<h2 class="text-xl font-bold text-gray-900 mb-4">اقدامات سریع</h2>
			<div class="grid grid-cols-2 md:grid-cols-4 gap-3">
				<button class="action-btn">
					<i class="fi fi-rr-plus text-2xl mb-2"></i>
					<span>اتصال جدید</span>
				</button>
				<button class="action-btn">
					<i class="fi fi-rr-refresh text-2xl mb-2"></i>
					<span>بروزرسانی</span>
				</button>
				<button class="action-btn">
					<i class="fi fi-rr-chart-histogram text-2xl mb-2"></i>
					<span>گزارش‌ها</span>
				</button>
				<button class="action-btn">
					<i class="fi fi-rr-settings text-2xl mb-2"></i>
					<span>تنظیمات</span>
				</button>
			</div>
		</div>

		{# Recent Activity #}
		<div class="card">
			<h2 class="text-xl font-bold text-gray-900 mb-4">فعالیت‌های اخیر</h2>
			<div class="space-y-3">
				<div class="activity-item">
					<div class="activity-icon bg-blue-100 text-blue-600">
						<i class="fi fi-rr-user text-xl"></i>
					</div>
					<div class="activity-content">
						<p class="activity-title">کاربر جدید ثبت نام کرد</p>
						<p class="activity-time">۲ دقیقه پیش</p>
					</div>
				</div>
				<div class="activity-item">
					<div class="activity-icon bg-green-100 text-green-600">
						<i class="fi fi-rr-check text-xl"></i>
					</div>
					<div class="activity-content">
						<p class="activity-title">اتصال پایگاه داده موفقیت‌آمیز بود</p>
						<p class="activity-time">۱۵ دقیقه پیش</p>
					</div>
				</div>
				<div class="activity-item">
					<div class="activity-icon bg-purple-100 text-purple-600">
						<i class="fi fi-rr-settings-sliders text-xl"></i>
					</div>
					<div class="activity-content">
						<p class="activity-title">سیستم به نسخه ۲.۱.۰ بروزرسانی شد</p>
						<p class="activity-time">۱ ساعت پیش</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
