<!DOCTYPE html>
<html lang="{{ lang|default('en') }}" dir="{{ direction|default('ltr') }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<meta name="theme-color" content="#3B82F6">
		<title>{{ page_title|default('Panel') }}
			-
			{{ site_name|default('DB Conn') }}</title>
		<link rel="stylesheet" href="{{ plugin_url ~ 'public/css/style.css' }}">
		<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-regular-rounded/css/uicons-regular-rounded.css'>
		<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-bold-rounded/css/uicons-bold-rounded.css'>
		<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/2.6.0/uicons-solid-rounded/css/uicons-solid-rounded.css'>
	</head>
	<body
		class="app-body">

		{# Fixed Top Header #}
		<header class="app-header">
			<div
				class="app-header-container">
				{# Mobile Menu Button #}
				<button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Menu">
					<i class="fi fi-rr-menu-burger text-2xl"></i>
				</button>

				{# Logo/Brand #}
				<div class="app-logo">
					<i class="fi fi-rr-database text-2xl text-blue-600"></i>
					<span class="app-title">DB Conn</span>
				</div>

				{# Desktop Navigation #}
				<nav class="desktop-nav">
					<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="nav-link">
						<i class="fi fi-rr-home text-xl"></i>
						<span>پنل</span>
					</a>
					<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="nav-link">
						<i class="fi fi-rr-apps text-xl"></i>
						<span>خدمات</span>
					</a>
					<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="nav-link">
						<i class="fi fi-rr-interrogation text-xl"></i>
						<span>راهنما</span>
					</a>
				</nav>
				{# User Menu #}
				<div class="user-menu">
					<button class="user-menu-btn" id="userMenuBtn" aria-label="User menu">
						<i class="fi fi-sr-circle-user text-2xl"></i>
					</button>
					{# User Dropdown #}
					<div class="user-dropdown" id="userDropdown">
						<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="dropdown-item">
							<i class="fi fi-rr-user text-xl"></i>
							<span>پروفایل</span>
						</a>
						<a href="{{ home_url ~ page_slugs.about }}" data-nav="about" class="dropdown-item">
							<i class="fi fi-rr-info text-xl"></i>
							<span>درباره ما</span>
						</a>
						<div class="dropdown-divider"></div>
						<button data-theme-toggle class="dropdown-item w-full text-left">
							<span class="theme-icon">
								<i class="fi fi-rr-moon-stars text-xl"></i>
							</span>
							<span>تغییر حالت تاریک</span>
						</button>
						<div class="dropdown-divider"></div>
						<a href="#" id="logoutBtn" class="dropdown-item text-red-600 dark:text-red-400">
							<i class="fi fi-rr-sign-out-alt text-xl"></i>
							<span>خروج</span>
						</a>
					</div>
				</div>
			</div>
		</header>

		{# Mobile Sidebar Menu #}
		<div class="mobile-sidebar" id="mobileSidebar">
			<div class="mobile-sidebar-header">
				<h3 class="text-lg font-bold text-gray-900">منو</h3>
				<button class="mobile-sidebar-close" id="closeSidebarBtn" aria-label="Close menu">
					<i class="fi fi-rr-cross text-2xl"></i>
				</button>
			</div>
			<nav class="mobile-sidebar-nav">
				<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="mobile-nav-link">
					<i class="fi fi-rr-home text-xl"></i>
					<span>پنل</span>
				</a>
				<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="mobile-nav-link">
					<i class="fi fi-rr-user text-xl"></i>
					<span>پروفایل</span>
				</a>
				<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="mobile-nav-link">
					<i class="fi fi-rr-apps text-xl"></i>
					<span>خدمات</span>
				</a>
				<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="mobile-nav-link">
					<i class="fi fi-rr-interrogation text-xl"></i>
					<span>راهنما</span>
				</a>
				<a href="{{ home_url ~ page_slugs.about }}" data-nav="about" class="mobile-nav-link">
					<i class="fi fi-rr-info text-xl"></i>
					<span>درباره ما</span>
				</a>
			</nav>
		</div>
		<div class="mobile-sidebar-overlay" id="sidebarOverlay"></div>

		{# Main Content Area #}
		<main class="app-main">
			<div class="app-container">
				<div class="page-header">
					<h1 class="page-title">{{ page_title|default('Panel') }}</h1>
				</div>
				{% block content %}{% endblock %}
			</div>
		</main>

		{# Bottom Navigation (Mobile) #}
		<nav class="bottom-nav">
			<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="bottom-nav-link active">
				<i class="fi fi-rr-home text-2xl"></i>
				<span>پنل</span>
			</a>
			<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="bottom-nav-link">
				<i class="fi fi-rr-apps text-2xl"></i>
				<span>خدمات</span>
			</a>
			<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="bottom-nav-link">
				<i class="fi fi-rr-interrogation text-2xl"></i>
				<span>راهنما</span>
			</a>
			<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="bottom-nav-link">
				<i class="fi fi-rr-user text-2xl"></i>
				<span>پروفایل</span>
			</a>
		</nav>

		<script src="{{ plugin_url ~ 'public/js/script.js' }}" type="module"></script>
	</body>
</html>
