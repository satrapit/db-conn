<!DOCTYPE html>
<html lang="{{ lang|default('en') }}" dir="{{ direction|default('ltr') }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ page_title|default('Page') }}
			-
			{{ site_name|default('DB Conn') }}</title>
		<link rel="stylesheet" href="{{ plugin_url ~ 'public/css/style.css' }}">
	</head>
	<body class="flex flex-col min-h-screen bg-gray-50">

		{% include 'components/header.twig' %}

		<main class="flex-grow">
			<div class="container mx-auto px-4 py-8">
				<h1 class="text-3xl font-bold text-gray-900 mb-8">{{ page_title }}</h1>
				{% block content %}{% endblock %}
			</div>
		</main>

		{% include 'components/footer.twig' %}

		<script src="{{ plugin_url ~ 'public/js/script.js' }}"></script>
	</body>
</html>
