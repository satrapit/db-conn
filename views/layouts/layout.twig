<!DOCTYPE html>
<html lang="{{ lang|default('en') }}" dir="{{ direction|default('ltr') }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
		<meta name="theme-color" content="#3B82F6">
		<title>{{ page_title|default('Panel') }}
			-
			{{ site_name|default('DB Conn') }}</title>
		<link rel="stylesheet" href="{{ plugin_url ~ 'public/css/style.css' }}">
	</head>
	<body
		class="app-body">

		{# Fixed Top Header #}
		<header class="app-header">
			<div
				class="app-header-container">
				{# Mobile Menu Button #}
				<button class="mobile-menu-btn" id="mobileMenuBtn" aria-label="Menu">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>

				{# Logo/Brand #}
				<div class="app-logo">
					<svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
					</svg>
					<span class="app-title">DB Conn</span>
				</div>

				{# Desktop Navigation #}
				<nav class="desktop-nav">
					<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="nav-link">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
						</svg>
						<span>پنل</span>
					</a>
					<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="nav-link">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
						</svg>
						<span>خدمات</span>
					</a>
					<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="nav-link">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
						<span>راهنما</span>
					</a>
				</nav>
				{# User Menu #}
				<div class="user-menu">
					<button class="user-menu-btn" id="userMenuBtn" aria-label="User menu">
						<svg class="w-6 h-6" fill="currentColor" viewbox="0 0 20 20">
							<path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
						</svg>
					</button>
					{# User Dropdown #}
					<div class="user-dropdown" id="userDropdown">
						<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="dropdown-item">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
							</svg>
							<span>پروفایل</span>
						</a>
						<a href="{{ home_url ~ page_slugs.about }}" data-nav="about" class="dropdown-item">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<span>درباره ما</span>
						</a>
						<div class="dropdown-divider"></div>
						<button data-theme-toggle class="dropdown-item w-full text-left">
							<span class="theme-icon">
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
								</svg>
							</span>
							<span>تغییر حالت تاریک</span>
						</button>
						<div class="dropdown-divider"></div>
						<a href="#" id="logoutBtn" class="dropdown-item text-red-600 dark:text-red-400">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
							</svg>
							<span>خروج</span>
						</a>
					</div>
				</div>
			</div>
		</header>

		{# Mobile Sidebar Menu #}
		<div class="mobile-sidebar" id="mobileSidebar">
			<div class="mobile-sidebar-header">
				<h3 class="text-lg font-bold text-gray-900">منو</h3>
				<button class="mobile-sidebar-close" id="closeSidebarBtn" aria-label="Close menu">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>
			<nav class="mobile-sidebar-nav">
				<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="mobile-nav-link">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
					</svg>
					<span>پنل</span>
				</a>
				<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="mobile-nav-link">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
					</svg>
					<span>پروفایل</span>
				</a>
				<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="mobile-nav-link">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
					</svg>
					<span>خدمات</span>
				</a>
				<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="mobile-nav-link">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					<span>راهنما</span>
				</a>
				<a href="{{ home_url ~ page_slugs.about }}" data-nav="about" class="mobile-nav-link">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					<span>درباره ما</span>
				</a>
			</nav>
		</div>
		<div class="mobile-sidebar-overlay" id="sidebarOverlay"></div>

		{# Main Content Area #}
		<main class="app-main">
			<div class="app-container">
				<div class="page-header">
					<h1 class="page-title">{{ page_title|default('Panel') }}</h1>
				</div>
				{% block content %}{% endblock %}
			</div>
		</main>

		{# Bottom Navigation (Mobile) #}
		<nav class="bottom-nav">
			<a href="{{ home_url ~ page_slugs.panel }}" data-nav="panel" class="bottom-nav-link active">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
				</svg>
				<span>پنل</span>
			</a>
			<a href="{{ home_url ~ page_slugs.services }}" data-nav="services" class="bottom-nav-link">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
				</svg>
				<span>خدمات</span>
			</a>
			<a href="{{ home_url ~ page_slugs.help }}" data-nav="help" class="bottom-nav-link">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
				</svg>
				<span>راهنما</span>
			</a>
			<a href="{{ home_url ~ page_slugs.profile }}" data-nav="profile" class="bottom-nav-link">
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
				</svg>
				<span>پروفایل</span>
			</a>
		</nav>

		<script src="{{ plugin_url ~ 'public/js/script.js' }}" type="module"></script>
	</body>
</html>
